<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bar_height"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="更新提示"
        android:textColor="@color/black_light_e"
        android:textSize="@dimen/tv_4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_lv2">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="版本号:"
            android:textColor="@color/black_light_e"
            android:textSize="@dimen/tv_4" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bar_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_lv2"
            android:layout_toRightOf="@+id/tv"
            android:gravity="center"
            android:textSize="@dimen/tv_4" />
    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_lv2"
        android:layout_marginRight="@dimen/padding_lv2"
        android:lineSpacingMultiplier="1.2"
        android:text="111111111111111111111111111111111"
        android:textColor="@color/black_light_e"
        android:textSize="@dimen/tv_4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding_lv2"
        android:background="@color/gray_9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bar_height"
        android:layout_marginTop="@dimen/padding_lv2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_lv2"
            android:layout_weight="1"
            android:background="@drawable/button_gray_line_conner_white_bg"
            android:text="取消" />

        <Button
            android:id="@+id/sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_lv2"
            android:layout_marginRight="@dimen/padding_lv2"
            android:layout_weight="1"
            android:background="@drawable/button_gray_line_conner_white_bg"
            android:text="确定" />
    </LinearLayout>
</LinearLayout>