<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_lv6"
    android:layout_marginRight="@dimen/padding_lv6"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/padding_lv2"
        android:background="@color/gray_9" />

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    </ListView>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/big_big_height"
        android:layout_below="@+id/view1"
        android:layout_marginLeft="@dimen/padding_lv6"
        android:layout_marginRight="@dimen/padding_lv6"
        android:layout_marginTop="@dimen/padding_lv2"
        android:background="@drawable/edit_bg">

        <EditText
            android:id="@+id/ed_beizhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_lv6"
            android:layout_marginRight="@dimen/padding_lv6"
            android:layout_marginTop="@dimen/padding_lv2"
            android:background="@null"
            android:lineSpacingMultiplier="1.5"
            android:hint="@string/beizhu"
            android:textColor="@color/black_light_e"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="@dimen/tv_4" />
    </LinearLayout>
</LinearLayout>